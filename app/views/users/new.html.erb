
<center><h1>Signup!</h1>

    <%= form_for User.new do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :email_confirmation %>
      <%= text_field :user, :email_confirmation %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Submit" %>
    <% end %></center>
